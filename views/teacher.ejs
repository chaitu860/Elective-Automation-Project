<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Teacher</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/teacher" method="POST">
            <div class="form-group">
              <label for="c_id">Faculty Name</label>
              <input type="text" class="form-control" name="usern">
            </div>
            <div class="form-group">
              <label for="c_name">Password</label>
              <input type="text" class="form-control" name="pass">
            </div>
            <div class="form-group">
              <label for="sem">Position</label>
              <input type="text" class="form-control" name="pos">
            </div>
           
            <div class="form-group">
              <label for="dept_id">Deptartment Id</label>
              <input type="text" class="form-control" name="dept_id">
            </div>
           
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>

        </div>
      </div>
    </div>


  </div>
</div>

<%- include('partials/header') %>
