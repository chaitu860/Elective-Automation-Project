<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Courses</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/course" method="POST">
            <div class="form-group">
              <label for="c_id">Course Id</label>
              <input type="text" class="form-control" name="c_id">
            </div>
            <div class="form-group">
              <label for="c_name">Course Name</label>
              <input type="text" class="form-control" name="c_name">
            </div>
            <div class="form-group">
              <label for="sem">Semester</label>
              <input type="number" class="form-control" name="sem">
            </div>
            <div class="form-group">
              <label for="e_id">Elective Id</label>
              <input type="text" class="form-control" name="e_id">
            </div>
            <div class="form-group">
              <label for="dept_id">Deptartment Id</label>
              <input type="text" class="form-control" name="dept_id">
            </div>
            <div class="form-group">
              <label for="cc">Course Credit</label>
              <input type="number" class="form-control" name="cc">
            </div>
            <div class="form-group">
              <label for="cc">Faculty</label>
              <input type="Text" class="form-control" name="fac">
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>

        </div>
      </div>
    </div>


  </div>
</div>

<%- include('partials/header') %>
